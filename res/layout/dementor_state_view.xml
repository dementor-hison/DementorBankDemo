<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/state_view_height"
        android:layout_marginTop="10dp" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="5dp" >

            <View
                android:id="@+id/progress_off"
                android:layout_width="match_parent"
                android:layout_height="@dimen/state_progress_height" />

            <View
                android:id="@+id/progress_on"
                android:layout_width="0dp"
                android:layout_height="@dimen/state_progress_height" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/state_place0"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/state_place_height"
                    android:scaleType="fitCenter"
                    android:src="@drawable/dementor_place_img_1" />

                <RelativeLayout
                    android:layout_width="17.5dp"
                    android:layout_height="17.5dp"
                    android:layout_below="@+id/state_place0"
                    android:layout_centerHorizontal="true"
                    android:background="@android:color/white" >

                    <ImageView
                        android:id="@+id/state_dot0"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/dementor_place_img_2" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="3dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/dementor_icon_lock" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/state_place1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/state_place_height"
                    android:scaleType="fitCenter"
                    android:src="@drawable/dementor_place_img_1" />

                <RelativeLayout
                    android:layout_width="17.5dp"
                    android:layout_height="17.5dp"
                    android:layout_below="@+id/state_place1"
                    android:layout_centerHorizontal="true"
                    android:background="@android:color/white" >

                    <ImageView
                        android:id="@+id/state_dot1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/dementor_place_img_2" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="3dp"
                    android:src="@drawable/dementor_icon_key_1" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/state_place2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/state_place_height"
                    android:scaleType="fitCenter"
                    android:src="@drawable/dementor_place_img_1" />

                <RelativeLayout
                    android:layout_width="17.5dp"
                    android:layout_height="17.5dp"
                    android:layout_below="@+id/state_place2"
                    android:layout_centerHorizontal="true"
                    android:background="@android:color/white" >

                    <ImageView
                        android:id="@+id/state_dot2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/dementor_place_img_2" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="3dp"
                    android:src="@drawable/dementor_icon_key_2" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/state_last_group"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/state_place3"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/state_place_height"
                    android:scaleType="fitCenter"
                    android:src="@drawable/dementor_place_img_1" />

                <RelativeLayout
                    android:layout_width="17.5dp"
                    android:layout_height="17.5dp"
                    android:layout_below="@+id/state_place3"
                    android:layout_centerHorizontal="true"
                    android:background="@android:color/white" >

                    <ImageView
                        android:id="@+id/state_dot3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/dementor_place_img_2" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="3dp"
                    android:src="@drawable/dementor_icon_key_3" />
            </RelativeLayout>
        </LinearLayout>
    </FrameLayout>

    <TextView
        android:id="@+id/help_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/state_text_margin"
        android:layout_marginTop="@dimen/state_text_margin"
        android:gravity="center_horizontal"
        android:textColor="@android:color/darker_gray"
        android:textSize="14dp"
        android:textStyle="bold" />

</LinearLayout>